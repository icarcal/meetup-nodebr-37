    pre
      code.javascript.
        const heroes = [
          { name: 'Hulk', publisher: 'Marvel' },
          { name: 'Spiderman', publisher: 'Marvel' },
          { name: 'Thor', publisher: 'Marvel' },
          { name: 'Iron Man', publisher: 'Marvel' },
