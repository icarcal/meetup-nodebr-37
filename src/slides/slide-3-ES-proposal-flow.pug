- var notes = '0 - Strawman; 1 - Proposal; 2 - Draft; 3 - Candidate; 4 - Finished;'

section(data-notes=notes)
  h2.title ECMA SCRIPT
  table.fragment(style="font-size:20px")
    thead
      tr
        th Stage
        th(style="text-align:center") Purpose
        th Phase
    tbody
      tr
        td(style="text-align:center") 0
        td
          | √ Allow input into the specification
        td
          | N/A
      tr
        td(style="text-align:center") 1
        td
          | √ Make the case for the addition
          br
          | √ Describe the shape of a solution
          br
          | √ Identify potential challenges
        td
          | Polyfills / demos
      tr
        td(style="text-align:center") 2
        td
          | √  Precisely describe the syntax and semantics
          br
          | using formal spec language
        td Experimental
      tr
        td(style="text-align:center") 3
        td
          | √ Indicate that further refinement will require
          br
          | feedback from implementations and users
        td Spec compliant
      tr
        td(style="text-align:center") 4
        td
          | √ Indicate that the addition is ready for inclusion
          br
          | in the formal ECMAScript standard
        td Shipping
